{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base",
    "plugin:prettier/recommended"
  ],
  "plugins": ["import", "node", "prettier"],
  "rules": {
    "prettier/prettier": "error",
    "import/no-unresolved": "error",
    "node/no-missing-require": "error",
    "node/no-deprecated-api": "warn"
  }
}
